# OpsSage Environment Configuration
# Copy this file to .env and fill in your actual values

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/credentials.json
GOOGLE_CLOUD_PROJECT=your-project-id

# Model Configuration
WORKER_MODEL=gemini-2.5-flash
CRITIC_MODEL=gemini-2.5-pro

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO

# RAG Configuration
USE_REAL_KNOWLEDGE_ADAPTER=true  # Set to false to use mock data for testing
CHROMADB_PATH=./data/chromadb    # Path to persist vector database

# Optional: Gemini API Key (alternative to service account)
# GEMINI_API_KEY=your-api-key-here
